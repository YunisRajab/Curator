<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />

    <Button
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addText"
        android:layout_alignLeft="@+id/addText"
        android:text="Send" />

    <Button
        android:id="@+id/receive_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/addText"
        android:layout_alignTop="@+id/send_button"
        android:text="Receive" />

    <EditText
        android:id="@+id/addText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/portText"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="text"
        android:text="192.168.0.17" />

    <EditText
        android:id="@+id/portText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startButton"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="port"
        android:inputType="number"
        android:text="50005" />

    <TextView
        android:id="@+id/editText8"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addText"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="address" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/portText"
        android:layout_alignParentLeft="true"
        android:text="port" />

    <Switch
        android:id="@+id/parentSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/send_button"
        android:layout_alignParentRight="true"
        android:text="parent" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/uriText"
        android:layout_centerHorizontal="true"
        android:text="Start" />

    <EditText
        android:id="@+id/uriText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="126dp"
        android:ems="10"
        android:hint="Video"
        android:inputType="textPersonName"
        android:text="https://archive.org/download/ksnn_compilation_master_the_internet/ksnn_compilation_master_the_internet_512kb.mp4" />

    <Button
        android:id="@+id/ytButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:text="YT" />

</RelativeLayout>